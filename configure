#!/bin/sh

set -e

input="$1"
if [ -z "${input}" -o ! -f "${input}" ]
then
  echo "Error: missing input file">&2
  echo "Note: Please specify (the first) PPR PDF.">&2
  exit 1
fi

base="${input%_1.pdf}"
if [ "${base}" != "${input}" ]
then # multipart
	echo >config.mk
	for i in `seq 1 9`
	do
		if [ -f "${base}_${i}.pdf" ]
		then
			echo "PPRVOL${i} := ${base}_${i}.pdf"
		else
			break
		fi
	done >> config.mk
else
	cat > config.mk << EOF
PPRVOL1 := ${input}
EOF
fi
make clean
