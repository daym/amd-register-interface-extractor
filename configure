#!/bin/sh

set -e

input="$1"
if [ -z "${input}" -o ! -f "${input}" ]
then
  echo "Error: missing input file">&2
  echo "Note: Please specify (the first) PPR PDF.">&2
  exit 1
fi

base="${input%_1.pdf}"
if [ "${base}" != "${input}" ]
then # multipart
	cat > config.mk << EOF
PPRVOL1 := ${base}_1.pdf
PPRVOL2 := ${base}_2.pdf
PPRVOL3 := ${base}_3.pdf
EOF

	if [ -f "${base}_5.pdf" ]
	then
		cat >> config.mk << EOF
PPRVOL4 := ${base}_4.pdf
PPRVOL5 := ${base}_5.pdf
EOF
	fi
else
	cat > config.mk << EOF
PPRVOL1 := ${input}
EOF
fi
make clean
